<!-- Search container -->
<div class="py-4 py-lg-6 bg-primary results-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-12">
        <div>
          <h1 class="text-white mb-1 display-4">Searching</h1>
          <p class="mb-0 text-white lead">Showing results for "<%= search %>"</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class = container>

<!-- Toggles and filters-->
<ul class="nav filtersNav">
  <li class="nav-item">
    <div class="dropdown">
      <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Categories
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="custom-control custom-checkbox checkbox-pad">
          <input type="checkbox" class="custom-control-input" id="cat1" data-toggle="indeterminate">
          <label class="custom-control-label" for="cat1">Category 1</label>
      </div>
        <div class="custom-control custom-checkbox checkbox-pad">
          <input type="checkbox" class="custom-control-input" id="cat2" data-toggle="indeterminate">
          <label class="custom-control-label" for="cat2">Category 2</label>
      </div>
    </div>
  </li>
  <li class="nav-item content-pad">
    <button type="button" class="btn btn-outline-primary dropdown-toggle">Time</button>
  </li>
  <li class="nav-item content-pad">
    <button type="button" class="btn btn-outline-primary dropdown-toggle">Level</button>
  </li>
  <li class="nav-item content-pad">
    <button type="button" class="btn btn-outline-primary dropdown-toggle">Price</button>
  </li>
</ul>

<div class="row">
  <% for (let i = 0; i < courses.length; i++) { %>
  <div class="col-lg-3 col-md-6 col-12">
    <!-- Card -->
    <div class="card  mb-4 card-hover">
      <!-- Card Body -->
      <div class="card-body">
        <h4 class="mb-2 text-truncate-line-2 "><a href="/course/<%=courses[i].id%>/ " class="text-inherit">
          <%= courses[i].title %>
          </a></h4>
        <!-- List -->
        <ul class="mb-3 list-inline">
          <li class="list-inline-item"><i class="far fa-clock mr-1"></i><%= courses[i].time %></li>
          <li class="list-inline-item">
            <%= courses[i].difficulty %>
          </li>
        </ul>
        <div class="lh-1">
          <span class="text-warning"><%= courses[i].category.name %> </span>
          <span class="font-size-xs text-muted"><%= courses[i].subject.name %></span>
        </div>
      </div>
      <!-- Card Footer -->
      <div class="card-footer">
        <div class="row align-items-center no-gutters">
          <div class="col ml-2">
            <span><%= courses[i].instructor.username%> </span>
          </div>
          <div class="col-auto">
            <a href="#!" class="text-muted" data-toggle="tooltip" data-placement="top" title="Add to Bookmarks">
              <i class="fe fe-bookmark  "></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<!-- PAGINATION -->
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item disabled outline-primary">
      <a class="page-link outline-primary" href="#" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
    <li class="page-item"><a class="page-link outline-primary" href="#">1</a></li>
    <li class="page-item"><a class="page-link outline-primary" href="#">2</a></li>
    <li class="page-item"><a class="page-link outline-primary" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link outline-primary" href="#">Next</a>
    </li>
  </ul>
</nav>
</nav>